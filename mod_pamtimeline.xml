<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.5" client="site" method="upgrade">
	<name>MOD_PAMTIMELINE</name>
	<creationDate>December 2016</creationDate>
	<author>Pablo Sel√≠n Carrasco - APie</author>
	<authorEmail>pablo@apie.cl</authorEmail>
	<authorUrl>[AUTHOR_URL]</authorUrl>
	<copyright>APie</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<version>1.0</version>
	<description>MOD_PAMTIMELINE_XML_DESCRIPTION</description>

	<files>
		<filename module="mod_pamtimeline">mod_pamtimeline.php</filename>
		<folder>tmpl</folder>
		<folder>language</folder>
		<filename>mod_pamtimeline.xml</filename>
	</files>

	<!-- Update servers -->
	<updateservers>
		<server type="extension" priority="1" name="Visualizaciones PAM">https://www.example.com/mod_pamtimeline.xml</server>
	</updateservers>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="domain"
					type="url"
					label="MOD_PAMTIMELINE_URL_LABEL"
					description="MOD_PAMTIMELINE_URL_DESCRIPTION"
					hint="https://www.example.com"
					filter="url"
					validate="url"
				/>
			</fieldset>
			<fieldset
					name="advanced">
				<field
						name="moduleclass_sfx"
						type="text"
						label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
						description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>
